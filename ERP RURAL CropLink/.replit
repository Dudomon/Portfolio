modules = ["python-3.11", "postgresql-16", "python3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --config config/gunicorn.conf.py app:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37613
externalPort = 3000

[[ports]]
localPort = 41335
externalPort = 3002

[[ports]]
localPort = 46655
externalPort = 3003

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--config", "config/gunicorn.conf.py", "run:app"]
build = ["pip", "install", "-r", "requirements.txt"]
